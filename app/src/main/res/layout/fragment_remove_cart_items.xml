<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".main_files.fragments.RemoveCartItems">

    <RelativeLayout
        android:id="@+id/main_layout_remove_cart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sure to remove this item?"
                android:textColor="@color/material_black"
                android:textSize="@dimen/_17sdp"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_margin="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/product_layout_remove_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:weightSum="5"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="2"
                    android:layout_margin="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp">

                    <ImageView
                        android:id="@+id/productImg_remove_cart"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_110sdp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="@dimen/_3sdp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/coc" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="3"
                    android:layout_margin="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp">

                    <TextView
                        android:id="@+id/brandName_remove_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="Coca Cola"
                        android:textAlignment="center"
                        android:textColor="@color/t_2"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/productName_remove_cart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:singleLine="true"
                        android:text="Coca Cola Black soda drink"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/description_remove_cart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:text="It's avery tasty soft drink with full of energy."
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:id="@+id/quantity_remove_cart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:singleLine="true"
                        android:text="Quantity : 5"
                        android:textColor="@color/material_black"
                        android:textSize="@dimen/_13sdp" />

                    <TextView
                        android:id="@+id/price_remove_cart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:text="â‚¹10000"
                        android:textStyle="bold"
                        android:textColor="@color/t_2"
                        android:textSize="@dimen/_20sdp" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_5sdp"
                android:background="#4FC4D9E6"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:alpha="0.6"
                    android:scaleX="0.9"
                    android:scaleY="0.9"
                    android:src="@drawable/remove_cart_icon"/>

                <LinearLayout
                    android:id="@+id/btn_layout_remove_cart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:weightSum="2"
                    android:padding="@dimen/_5sdp"
                    android:orientation="horizontal" >

                    <androidx.cardview.widget.CardView
                        android:id="@+id/no_btn_remove_cart"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        app:cardBackgroundColor="@color/t_3"
                        android:layout_weight="1"
                        android:clipToPadding="true"
                        android:elevation="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        app:cardCornerRadius="@dimen/_5sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_gravity="center"/>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/yes_btn_remove_cart"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        app:cardBackgroundColor="@color/t_2"
                        android:layout_weight="1"
                        android:clipToPadding="true"
                        android:elevation="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        app:cardCornerRadius="@dimen/_5sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yes"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_gravity="center"/>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/whiteView_remove_cart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A1FFFFFF"
        android:visibility="gone" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loader_remove_cart"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_centerInParent="true"
        android:background="@null"
        android:scaleType="centerCrop"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/black_round_loader" />

</RelativeLayout>