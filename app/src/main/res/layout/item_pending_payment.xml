<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/body_item"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/_10sdp"
            android:src="@drawable/timer_icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">

            <TextView
                android:id="@+id/time_pp_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_2sdp"
                android:fontFamily="@font/roboto_medium"
                android:text="Time: 5:06 AM 17 Sep, 2024"
                android:textColor="@color/t_2"
                android:textSize="@dimen/_9sdp" />

            <TextView
                android:id="@+id/order_id_pp_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_2sdp"
                android:text="Order Id: order_86210"
                android:textColor="@color/material_black"
                android:textSize="@dimen/_9sdp" />

            <TextView
                android:id="@+id/tId_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending amount will be transferred within 10 days per T&amp;Cs"
                android:textColor="@color/text_color2"
                android:textSize="@dimen/_8sdp"
                android:textStyle="italic" />

        </LinearLayout>

        <TextView
            android:id="@+id/amount_pp_item"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:fontFamily="@font/roboto_black"
            android:text="â‚¹7822"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_18sdp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CACACA"/>

</LinearLayout>