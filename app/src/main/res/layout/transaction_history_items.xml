<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:id="@+id/body_item"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_margin="@dimen/_8sdp"
            app:cardBackgroundColor="@color/material_black"
            app:cardCornerRadius="@dimen/_5sdp">

            <ImageView
                android:id="@+id/icon_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/send_icon"
                android:layout_margin="@dimen/_10sdp"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:layout_weight="2"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/pay_type_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paid to +91 8420248002"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/name_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Madhumita Ghosh"
                android:textColor="@color/material_black"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tId_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction ID : TD1234564563"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/time_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 April, 2023 at 07:30 AM"
                android:textStyle="italic"/>

        </LinearLayout>

        <TextView
            android:id="@+id/amount_item"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="wrap_content"
            android:text="â‚¹5000"
            android:layout_margin="@dimen/_10sdp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CACACA"/>

</LinearLayout>