<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/itemLayout_seller_product"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_250sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_2sdp"
        android:layout_marginStart="@dimen/_2sdp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:layout_centerInParent="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/_5sdp">

            <ImageView
                android:id="@+id/productImage_seller_product"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/_3sdp"
                android:scaleType="fitCenter"
                android:src="@drawable/coc" />

            <TextView
                android:id="@+id/brandName_seller_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Coca Cola"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/material_black"
                android:textAlignment="center"
                android:maxLines="2"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_2sdp"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/productName_seller_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Coca Cola Black soda drink"
                android:singleLine="true"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/material_black"
                android:textAlignment="center"
                android:maxLines="2"
                android:layout_marginBottom="@dimen/_2sdp"
                android:ellipsize="end"/>

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center_horizontal"
                app:cardBackgroundColor="@color/material_black"
                android:layout_margin="@dimen/_2sdp"
                app:cardCornerRadius="@dimen/_10sdp">

                <TextView
                    android:id="@+id/productPrice_seller_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹12"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/_2sdp"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/ratingBar_seller_product"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_gravity="center_vertical"
                    android:numStars="5"
                    android:stepSize="0.1" />

                <TextView
                    android:id="@+id/ratingText_seller_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:text="3.8"
                    android:layout_gravity="center"
                    android:textColor="@color/material_black"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/stocks_seller_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stocks : 200"
                android:layout_gravity="center"
                android:textColor="@color/material_black"
                android:textSize="@dimen/_11sdp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>